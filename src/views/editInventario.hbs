<header class="row">>  
    {{>nav}}
</header>

<main class="row justify-content-around">

<h1 class="titulo-creador m-1">Inventario de Productos</h1>

<div class="row justify-content-center m-1 div-creador">

 <form class="row mt-3 justify-content-center" action="/editInventario" method="post" enctype="multipart/form-data">
  <div class="col-6 m-3 inventario justify-content-center">
    <input class="m-3" placeholder="Nombre" type="text" name="nombre" required>
    <textarea class="col-10 m-3" placeholder="Descripción" name="descripcion"></textarea>
    <input class="m-3"  placeholder="Estado" type="text" name="estado" required>
    <input class="m-3" placeholder="Precio" type="number" name="precio" required>
    <input class="m-3" type="file" name="url" accept="image/x-png,image/gif,image/jpeg" required><br>
    <div class="row justify-content-center"><button class="col-4 m-3" type="submit">Agregar al Inventario</button></div>
 </form>

</div>

<div class="row justify-content-around m-3">

  {{#each inventario}}
   
    <div class="col-5 col-sm-3 select-producto m-2 ms-0">
      <img src="./img/inventario/{{url}}" class="card-img-top" alt="">
       
  <form action="/editinventario?_method=PUT" method="post">
   <input type="hidden" name="_id" value={{_id}}>
    <label class="col-12 titulo-producto">Nombre del producto:</label>
      <textarea class="col-12" name="nombre">{{nombre}}</textarea> 
    <label class="col-12 titulo-producto">Precio:</label>
      <input name="precio" placeholder={{precio}}>
    <label class="col-12 titulo-producto">Estado:</label>
      <input name="estado" placeholder={{estado}}>
    <label class="col-12 titulo-producto">Descripción:</label>
      <textarea class="col-12" name="descripcion" placeholder="{{descripcion}}"></textarea>
   
    <div class="row justify-content-center">
    <button class="col-4" type="submit">Actualizar</button>
     
    <form action="/editinventario?_method=DELETE" method="post">
      <input type="hidden" name="_id" value={{_id}}>
      <button class="col-4" type="submit">Borrar</button>
    </form></div>
      
   </div>
   </div>
   
  </div> 
  
 {{/each}}
 </div>


</main>

{{>footer}}

